{
  "name": "@gradebook/actions-hook",
  "version": "0.2.0",
  "private": false,
  "description": "Ping a webhook when Github Actions successfully runs",
  "author": "Vikas Potluri <vikaspotluri123.github@gmail.com>",
  "homepage": "https://github.com/gradebook/cli-utils/tree/master/packages/action-hook",
  "license": "MIT",
  "main": "lib/actions-hook.js",
  "directories": {
    "lib": "lib",
    "test": "__tests__"
  },
  "files": [
    "lib"
  ],
  "publishConfig": {
    "registry": "https://registry.yarnpkg.com"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gradebook/cli-utils.git"
  },
  "scripts": {
    "pretest": "tsc",
    "test": "mocha __tests__ --recursive",
    "test:coverage": "nyc --reporter=html --reporter=text mocha __tests__ --recursive",
    "prepublish": "tsc",
    "tsc": "tsc",
    "lint": "xo"
  },
  "bugs": {
    "url": "https://github.com/gradebook/cli-utils/issues"
  },
  "dependencies": {
    "got": "10.5.5"
  },
  "devDependencies": {
    "@types/got": "9.6.9",
    "chai": "4.2.0",
    "sinon": "8.1.1"
  },
  "xo": {
    "ignores": [
      "lib"
    ],
    "rules": {
      "func-names": [
        "error",
        "as-needed"
      ],
      "func-name-matching": "off"
    },
    "overrides": [
      {
        "files": "__tests__/**/*.js",
        "envs": [
          "node",
          "mocha"
        ],
        "rules": {
          "func-names": "off",
          "prefer-arrow-callback": "off",
          "no-unused-expressions": "off"
        }
      }
    ]
  }
}
