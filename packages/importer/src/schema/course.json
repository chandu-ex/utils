{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "gradebook-course",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "name", "semester", "credit_hours", "cut1", "cut2", "cut3", "cut4", "cut1Name", "cut2Name", "cut3Name", "cut4Name"
  ],
  "properties": {
    "name": {
      "type": "string",
      "pattern": "^[A-Z]{3,4} \\d{3,4}$"
    },
    "semester": {
      "type": "string",
      "pattern": "^\\d{4}[SUFW]$"
    },
    "credit_hours": {
      "anyOf": [{
        "type": "number",
        "minimum": 0,
        "maximum": 5
      }, {
        "type": "null"
      }]
    },
    "categories": {
      "type": "array",
      "items": {
        "type": "object",
        "$ref": "gradebook-category"
      }
    },
    "cut1": {"$ref": "gradebook-util-cut"},
    "cut2": {"$ref": "gradebook-util-cut"},
    "cut3": {"$ref": "gradebook-util-cut"},
    "cut4": {"$ref": "gradebook-util-cut"},
    "cut1Name": {"$ref": "gradebook-util-cut-name"},
    "cut2Name": {"$ref": "gradebook-util-cut-name"},
    "cut3Name": {"$ref": "gradebook-util-cut-name"},
    "cut4Name": {"$ref": "gradebook-util-cut-name"}
  }
}
